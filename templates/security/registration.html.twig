{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block titre_page %}MyCentraleEmprunts{% endblock %}
{% block additionnal_body_block %}signup-page ls-closed{% endblock %}

{% block content %}
    <div class="signup-box col-xs-12 col-md-4">
            <div class="card">
                    <div class="header bg-orange">
                        <h2 class="center">
                            Formulaire d'inscription
                        </h2>
                    </div>
                    <div class="body">
                        {{ form_start(form) }}

                        {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
                        {{ form_row(form.firstName, {'label': 'Pr√©nom'}) }}
                        {{ form_row(form.lastName, {'label': 'Nom'}) }}
                        {{ form_row(form.email, {'label': 'Email'}) }}
                        {{ form_row(form.password, {'label': 'Mot de passe'}) }}
                        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe'}) }}


                            <center>
                                <button type="submit" class="btn btn-success">Valider</button>
                            </center>
                        {{ form_end(form) }}
                    </div>
            </div>
    </div>
{% endblock %}