{% extends 'base.html.twig' %}

{% block additionnal_body_block %}signup-page ls-closed{% endblock %}

{% block content %}
    <div class="signup-box col-xs-12 col-md-4">
        <div class="card">
            <div class="header bg-orange">
                <h2 class="center">
                    Connexion
                </h2>
            </div>

            <div class="body">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <div class="form-line">
                            <input placeholder="Nom d'utilisateur" required name="_username" type="text" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <center>
                            <button type="submit" class="btn btn-success">Valider</button>
                        </center>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}